{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "esnext"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
   },
   "include": [
      "src/**/*",
      "ormconfig.ts"
   ],
   "exclude": [
      "src/tests/**/*"
   ]
}